<%- include('../partials/header') -%>

<h1 class="text-center display-4" style="font-weight: bold; color: rgba(214, 53, 8, 0.61); font-family: Georgia, 'Times New Roman', Times, serif;">Edit User</h1>

<div class="container registration-form" style="width: 40%;">
  <div class="form-group">
    <form method="post" action="/admin/editCategory?categoryId=<%= category._id%>" style="background-color: rgba(2, 110, 40, 0.372); border-radius: 30px; box-shadow: 5px 5px 10px #888888;">
      <div class="form-group">
        <label for="fname">Category Name:</label>
        <input type="text" class="form-control item" name="categoryname" value="<%= category.categoryName %>">
      </div>
      <div class="form-group">
        <label for="lname">Description:</label>
        <input type="text" class="form-control item" id="description" name="description" value="<%= category.description %>">
      </div>
      
      
      <div class="form-group">
        <input type="submit" class="btn btn-block create-account" value="Update Category">
      </div>
    </form>
  </div>
  <div class="text-center">
    <button class="btn btn-danger" style="height: 40px; width: 200px; margin-bottom: 10px; margin-top: -30px; border-radius: 20px;">
      <a class="text-white" style="text-decoration: none;" href="/admin/">Go Back</a>
    </button>
  </div>
</div>

<%- include('../partials/footer') -%>
