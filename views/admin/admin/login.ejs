<%- include('partials/head') %>
<body style="background-image: url('/admin/imgs/adminlogin.jpg');"   >

    
      
    <div class="container" style="margin-top: 10%; border-radius: 25px; height: 400px; width: 500px; background-color: rgba(250, 235, 215, 0.414);" >
                    <h4 class="card-title mb-4">Login As Admin</h4>
                    
        <% if (typeof(errors) !== 'undefined' && errors.length > 0) { %>
            <div id="error-message" style="background-color: rgba(255, 23, 23, 0.215); border-radius: 10px;">
                <span>
                    <% errors.forEach(error => { %>
                        <p style="color: red;"><%= error %></p>
                    <% }); %>
                </span>
            </div>
        <% } %>

                    <form  method="post" action="/admin/postLogin">
                        <div class="mb-3">
                            
                            
                            <input class="form-control" type="text"  name="email" placeholder="Your Email">
                        </div> <!-- form-group// -->
                        <div class="mb-3">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                          
                        </div> <!-- form-group// -->
                        <div class="mb-3">
                            <a href="/admin/getForgotPassword" class="float-end font-sm text-danger">Forgot password?</a>
                         
                        </div> <!-- form-group form-check .// -->
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100"> Login </button>
                        </div> <!-- form-group// -->
                    </form>
                </div>
 
    
    <%- include('partials/script') %>
    <script src="/scripts/hideerror.js"></script>
</body>


