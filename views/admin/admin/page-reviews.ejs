<%- include('partials/head') %>
<body>
    <div class="screen-overlay"></div>
    <%- include('partials/aside') %>
    <main class="main-wrap">
        <%- include('partials/header') %> 
   
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Reviews</h2>
                   
                </div>
              
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <h2>User ratings on your products</h2>
                </header>
                <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                   
                                   
                                    <th>Product</th>
                                    <th>Name</th>
                                    <th>Rating</th>
                                    <th>Review</th>
                                    <th>Date</th>
                                    <th>Visibility</th>
                                    <th>Status</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i<reviews.length; i++){ %>
                                   <% reviews[i].rating.forEach(item => { %>
                                <tr>
                                   
                                    <td><b><%= reviews[i].productName  %></b></td>
                                  
                                    <td><%= item.userId.firstname  %></td>
                                    <td>   <div class="rating" id="star<%= i %>">
                                        <% for (let i = 1; i <= 5; i++) { %>
                                            <% if (i <= parseInt(item.rating)) { %>
                                                <span class="star" style="color: gold;" data-value="<%= i %>">&#9733;</span>
                                            <% } else { %>
                                                <span class="star" style="color: gray;" onclick="" data-value="<%= i %>">&#9733;</span>
                                            <% } %>
                                        <% } %>
                                   
                                    
                                    </div></td>
                                    <td><%= item.review %></td>
                                   
                                    <td><%= (item.reviewedOn).toString().slice(0,16)  %></td>
                                    <input hidden type="text" name="" id="productid<%= i  %>" value="<%= reviews[i]._id  %>">
                                    <input hidden id="reviewid<%= i  %>" type="text" value="<%= item._id  %>">
                                    <td><a onclick="showOrHide('<%= i %>')"><i class="fa fa-eye-slash" aria-hidden="true"></a></i>
                                    </td>
                                     <% if(item.hidden === false){ %>
                                        <td>Visible</td>
                                        <% }else{ %>
                                            <td>Hidden</td>
                                            <% } %>
                                   
                                </tr>
                                <% }) %>
                                <% } %>
                               
                         
                            </tbody>
                        </table>
                    </div> <!-- table-responsive//end -->
                </div>

                <script src="/admin/helpers/reviews.js">
                 
                </script>
                <!-- card-body end// -->
            </div>
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <% for(let i=1; i<=totalPages; i++) { %>
                          
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="/admin/reviews?page=<%= i %>"><%= i %></a>
                                </li>
                               
                        <% } %>
                    </ul>
                </nav>
            </div>
        </section> <!-- content-main end// -->
   
    </main>
    <script src="/admin/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/admin/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/admin/js/vendors/select2.min.js"></script>
    <script src="/admin/js/vendors/perfect-scrollbar.js"></script>
    <script src="/admin/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/admin/js/main.js" type="text/javascript"></script>
</body>


