<%- include('partials/head') %>

<body>
    <div class="screen-overlay"></div>
    <%- include('partials/aside') %>
    <main class="main-wrap">
        <%- include('partials/header') %> 
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Refferals Info </h2>
                    <p>View users refferal status</p>
                </div>
                <!-- 6 -->
            </div>
            <% if (typeof(errors) !== 'undefined' && errors.length > 0) { %>
                <div id="error-message" style="background-color: rgba(255, 23, 23, 0.215); border-radius: 10px;">
                    <span>
                        <% errors.forEach(error => { %>
                            <p style="color: red;"><%= error %></p>
                        <% }); %>
                    </span>
                </div>
            <% } %>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                    
                        <div class="col">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                           
                                            <th>User Name</th>
                                            <th>Refferal Code</th>
                                           <th>Reffered Users</th>
                                            <th>Amount Recieved</th>
                                           
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% refferals.forEach(item=>{ %>
                                                  <tr>
                                                    <% if(item.reffererId.firstname){ %>
                                                <td><%= item.reffererId.firstname  %></td> 
                                                <% }else{ %>
                                                    <td>Not available</td>
                                                    <% } %>
                                                    <% if(item.refferalCode){ %>
                                                <td><%= item.refferalCode  %></td>
                                                <% }else{ %>
                                                    <td>Not available</td>
                                                    <% } %>
                                                    <% if(item.reffereeId){ %>
                                                <td><%= item.reffereeId.length  %></td>

                                                <td><%= item.reffereeId.length * 100  %></td>
                                                <% } else { %>
                                                    <td>Not available</td>
                                                    <td>Not available</td>
                                                    <% } %>
                                        </tr>
                                    <%   }) %>
                                       
                                        </tbody>
                                           
                                </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                    <div class="pagination-area mt-15 mb-50">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-start">
                           
                              <% for(let i=1; i<=totalPages; i++) { %>
                                <li  class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a style="width: 50px;" class="page-link" href="/admin/showRefferals?page=<%= i %>"><%= i %></a>
                                </li>
                           
                            <% } %>
                            </ul>
                        </nav>
                    </div>
                </div> <!-- card body .// -->
                
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
    
    </main>
    <%- include('partials/script') %>
    <script src="/scripts/hideerror.js"></script>
   
        
</body>


