<%- include('partials/head') %>
<body>
    
    <% if (typeof errors !== '' && errors) { %>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                title: 'Error!',
                text: '<%= errors %>', 
                icon: 'error',
                confirmButtonText: 'OK'
            });
        </script>
    <% } %>

       
            <section class="content-main mt-80 mb-80">
                <div class="card mx-auto card-login">
                   
                 
                        <form method="post" action="/admin/verifyOtp">
                            <div class="card-body">
                                <h4 class="card-title mb-4">Enter Otp</h4>
                                <input class="form-control" type="text" name="enteredOTP" placeholder="Enter OTP" required>
                                <input class="form-control" type="hidden" name="email" value="<%= email %>">
                               
                            </div>
                            
                        <div style="display: flex; justify-content: flex-end;">
                                <a  class="text-muted" href="/admin/">Go back</a></div>
                               
                          
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-success" name="login">Submit</button>
                            </div>
                        </form>
                        <form method="POST" action="/admin/resendOtp">
                            <input class="form-control" type="hidden" name="email" value="<%= email %>">
                            <button class="form-control form-control btn btn-danger" type="submit">Resend OTP</button>
                          </form>
                        </div>
                     
            </section>
                        
                       
    
    <script src="/scripts/hideerror.js"></script>
   
</body>


