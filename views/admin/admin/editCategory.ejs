<%- include('partials/head') %>

<body>
    <div class="screen-overlay"></div>
    <%- include('partials/aside') %>
    <main class="main-wrap">
        <%- include('partials/header') %> 
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Edit <%=category.categoryName%> </h2>
                    <p>Edit Category</p>
                </div>
                <!-- <div>
                    <input type="text" placeholder="Search Categories" name="searchTerm" class="form-control bg-white">
                </div> -->
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form action="/admin/editCategory?categoryId=<%= category._id%>" method="POST">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Category Name</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="product_name" name="categoryname" value="<%= category.categoryName %>" />
                                </div>
                              
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here" class="form-control" name="description"><%= category.description %></textarea>
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-primary">Create category</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                           
                                            <th>Category Name</th>
                                            <th>Description</th>
                                            <th>Edit</th>
                                            <th>List</th>
                                            <th>Unlist</th>
                                            <th>Delete</th>
                                            <th>Status</th>
                                          
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% show.forEach((item) => { %>
                                            <tr>
                                              <td><%= item.categoryName %></td>
                                              <td><%= item.description %></td>
                                              <td>
                                                <a href="/admin/viewEditCategory?categoryId=<%= item._id %>">
                                                  <i class="fas fa-edit text-warning"></i>
                                                </a>
                                                
                                                  
                                                  
                                              </td>
                                              <td>
                                                <a href="/admin/toggleunList?categoryId=<%= item._id%>"><span>List</span>
                                                 
                                                </a>
                                              </td>
                                              <td>
                                                <a href="/admin/toggleList?categoryId=<%= item._id%>"><span>Unlist</span>
                                                
                                                </a>
                                              </td>
                                              <td>
                                                <a href="/admin/deleteCategory?categoryId=<%= item._id%>"><span>Delete</span>
                                                  
                                                </a>
                                              </td>
                                              <td>
                                                <% if (item.published === true) { %>
                                                  <span>Listed</span>
                                                <% } else { %>
                                                  <span>Unlisted</span>
                                                <% } %>
                                              </td>
                                            </tr>
                                          <% }); %>
                                        </tbody>
                                           
                                </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <%- include('partials/script') %>
</body>


