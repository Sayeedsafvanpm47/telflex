<%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
   

    <% if (typeof(errors) !== 'undefined' && errors.length > 0) { %>
        <div id="error-message" class="alert alert-danger">
            <span>
                <% errors.forEach(error => { %>
                    <p><%= error %></p>
                <% }); %>
            </span>
        </div>
    <% } %>
  
   
    <section class="content-main mt-80 mb-80">
        <div class="card mx-auto card-login">
            <div class="card-body">
                <h4 class="card-title mb-4">Forgot Password?</h4>
             
             
                <form method="post" action="/admin/updatePass">
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="Password">
<input class="form-control" type="password" name="chkpassword" placeholder="Confirm Password">
<input class="form-control" type="hidden" name="email" value="<%=email%>">
                       
                    </div>
                    
                
                        <a class="text-muted" href="/admin/">Go back</a>
                       
                    </div>
                    <div class="form-group d-flex justify-content-center" >
                        <button type="submit" class="btn btn-success btn-block hover-up" name="login">Submit</button>
                    </div>
                </form>
    </section>

                       
  
    
    <script src="/scripts/hideerror.js"></script>
    

</body>


