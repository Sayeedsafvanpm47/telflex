      <script>
        // Get the current URL or pathname
        let currentURL = window.location.pathname;
    
        // Get all the menu links including submenu links
        const menuLinks = document.querySelectorAll('.menu-link');
    
        // Loop through each menu link and check if it matches the current URL
        menuLinks.forEach(link => {
            // Get the href of the link
            let href = link.getAttribute('href');
    
            // Check if the current URL starts with the link's href (to handle submenus)
            if (currentURL.startsWith(href)) {
                // Add 'active' class to the parent 'li' element or the link itself
                link.classList.add('active');
                
                // For submenu items, ensure the parent submenu is also expanded
                if (link.closest('.has-submenu')) {
                    link.closest('.has-submenu').classList.add('active'); // Add 'active' to the parent submenu
                }
            }
        });
    </script>
    