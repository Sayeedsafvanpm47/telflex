<%- include('partials/head') %>
<body>
    <div class="screen-overlay"></div>
    <%- include('partials/aside') %>
    <main class="main-wrap">
        <%- include('partials/header') %> 
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">Manage Customers</h2>
            
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <form action="/admin/searchUser" method="POST">
                            <input type="text" placeholder="Search..." class="form-control" name="searchTerm">
                        </form>
                        </div>
                       
                    </div>
                </header> <!-- card-header end// -->
             
                   <form action="/admin/sortUser" method="POST">
                    <div class="col-lg-2 col-6 col-md-3">
                    <select class="form-select mt-20" style="margin-left: 20px;" name="sortingLogic" onchange="this.form.submit()">
                        <option value="">Sort</option>
                      <option value="alphaplus">A-Z</option>
                      <option value="alphaminus">Z-A</option>
                      <option value="admin">Admin</option>
                      <option value="blocked">Blocked</option>
                    </select>
                </div>
                  </form>
                  
                  <div style="overflow-x: auto;">
                    <table class="table table-striped table-bordered mt-20" 
                    width="100%">
                              <thead>
                                        <tr class="transparent-hd">

                                                  <th scope="col">First Name</th>
                                                  <th scope="col">Last Name</th>
                                                  <th scope="col">Email</th>
                                                  <th scope="col">Phone Number</th>
                                                  <th scope="col">Admin</th>
                                                  <th scope="col">Blocked</th>
                                           
                                                  <th scope="col">Block User</th>
                                        </tr>
                              </thead>
                              <tbody>
                                        <%user.forEach((item) => { %>
                                                  <tr class="transparent-row">
                                                            <td><%= item.firstname %></td>
                                                            <td><%= item.lastname %></td>
                                                            <td><%= item.email %></td>
                                                            <td><%= item.phonenumber %></td>
                                                            <td>
                                                                <% if (item.isAdmin === true) { %>
                                                                  <p>Admin</p>
                                                                <% } else { %>
                                                                  <p>Not an Admin</p>
                                                                <% } %>
                                                              </td>
                                                              <td>
                                                                <% if (item.isBlocked === true) { %>
                                                                  <p>Blocked</p>
                                                                <% } else { %>
                                                                  <p>Not Blocked</p>
                                                                <% } %>
                                                              </td>
                                                              
                                                            
                                                           
                                                                  
                                                                  <td>
                                                                      <a href="/admin/blockUser?email=<%= item.email%>"><i class="fa-solid fa-trash text-danger"></i></a>
                                                                  </td>
                                                  </tr>
                                       <% }) %>
                                        </tbody>
                           
                              </table>
                              </div>
           
        </section> <!-- content-main end// -->

    </main>
    <%- include('partials/script') %>

   
</body>


