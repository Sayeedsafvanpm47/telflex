<%- include('partials/head') %>

<body>
    <div class="screen-overlay"></div>
    <%- include('partials/aside') %>
    <main class="main-wrap">
        <%- include('partials/header') %> 
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Categories </h2>
                    <p>Add, edit or delete a category</p>
                </div>
                <!-- 6 -->
            </div>
            <% if (typeof(errors) !== 'undefined' && errors.length > 0) { %>
                <div id="error-message" style="background-color: rgba(255, 23, 23, 0.215); border-radius: 10px;">
                    <span>
                        <% errors.forEach(error => { %>
                            <p style="color: red;"><%= error %></p>
                        <% }); %>
                    </span>
                </div>
            <% } %>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form action="/admin/submitCategory" method="POST">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Category Name</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="product_name" name="categoryname" />
                                </div>
                              
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here" class="form-control" name="description"></textarea>
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-primary">Create category</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                           
                                            <th>Category Name</th>
                                            <th>Description</th>
                                            <th>Edit</th>
                                            <th>List</th>
                                        
                                            <th>Delete</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% category.forEach((item) => { %>
                                            <tr>
                                              <td><%= item.categoryName %></td>
                                              <td><%= item.description %></td>
                                              <td>
                                                <a href="/admin/viewEditCategory?categoryId=<%= item._id %>">
                                                  <i class="fas fa-edit text-warning"></i>
                                                </a>
                                                
                                                  
                                                  
                                              </td>
                                              <td>
                                                <a onclick="list('<%= item._id %>')"><span>List</span>

                                                 
                                                </a>
                                              </td>
                                         
                                              <td>
                                                <a onclick="deleteCategory('<%= item._id %>')" ><span>Delete</span>
                                                
                                                </a>
                                              </td>
                                              <td>
                                                <% if (item.published === true) { %>
                                                  <span>Listed</span>
                                                <% } else { %>
                                                  <span>Unlisted</span>
                                                <% } %>
                                              </td>
                                              
                                            </tr>
                                          <% }); %>
                                        </tbody>
                                           
                                </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
       
    </main>
    <script>
        async function list(Id)
        {
            try {

                const confirmResult = await Swal.fire({
      title: 'Edit Category',
      text: 'Are you sure you want to change the visibility of this category?',
      icon: 'question',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, change it!'
      });
      
      if (confirmResult.isConfirmed) {
         await fetch(`/admin/toggleList?categoryId=${Id}`,{method:'GET'})
        await Swal.fire('Success', 'Category visibility changed successfully!', 'success');
        location.reload()
      
      }
                
            } catch (error) {

                console.log(error)
                await Swal.fire('Error', 'Error while performing operation!', 'error');
                
            }
         

        }
       async function deleteCategory(Id)
        {

            try {

const confirmResult = await Swal.fire({
title: 'Edit Category',
text: 'Are you sure you want to delete this category?',
icon: 'question',
showCancelButton: true,
confirmButtonColor: '#3085d6',
cancelButtonColor: '#d33',
confirmButtonText: 'Yes, deleete it!'
});

if (confirmResult.isConfirmed) {
await fetch(`/admin/deleteCategory?categoryId=${Id}`,{
    method:'get'})
await Swal.fire('Success', 'Category deleted successfully!', 'success');
location.reload()

}

} catch (error) {

console.log(error)
await Swal.fire('Error', 'Error while performing operation!', 'error');

}


        }
    </script>
    <%- include('partials/script') %>
    <script src="/scripts/hideerror.js"></script>
</body>


