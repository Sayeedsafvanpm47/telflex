<%- include('../partials/header') -%>

<h1 class="text-center display-4" style="font-weight: bold; color: rgba(214, 53, 8, 0.61); font-family: Georgia, 'Times New Roman', Times, serif;">Edit User</h1>

<div class="container registration-form" style="width: 40%;">
  <div class="form-group">
    <form method="post" action="/admin/updateUser" style="background-color: rgba(2, 110, 40, 0.372); border-radius: 30px; box-shadow: 5px 5px 10px #888888;">
      <div class="form-group">
        <label for="fname">First Name:</label>
        <input type="text" class="form-control item" id="fname" name="firstname" value="<%= user.firstname %>">
      </div>
      <div class="form-group">
        <label for="lname">Last Name:</label>
        <input type="text" class="form-control item" id="lname" name="lastname" value="<%= user.lastname %>">
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="text" class="form-control item" id="email" name="email" value="<%= user.email %>" readonly>
      </div>
      <div class="form-group">
        <label for="phone-number">Phone Number:</label>
        <input type="text" class="form-control item" name="phonenumber" id="phone-number" value="<%= user.phonenumber %>">
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-block create-account" value="Update User">
      </div>
    </form>
  </div>
  <div class="text-center">
    <button class="btn btn-danger" style="height: 40px; width: 200px; margin-bottom: 10px; margin-top: -30px; border-radius: 20px;">
      <a class="text-white" style="text-decoration: none;" href="/admin/viewCustomers">Go Back</a>
    </button>
  </div>
</div>

<%- include('../partials/footer') -%>
