<%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
  
 
    <% if (typeof errors !== '' && errors) { %>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                title: 'Error!',
                text: '<%= errors %>', 
                icon: 'error',
                confirmButtonText: 'OK'
            });
        </script>
    <% } %>
<section style="background-image: url('/user/imgs/register.jpg'); background-size: cover; background-repeat: no-repeat; margin-top: 0px;">
  <div class="container d-flex justify-content-center mt-5 mb-5" >
    <div class="col-lg-4" >
        <div class="mt-30 mb-30 login_wrap widget-taber-content p-30 background-white border-radius-5"  style="box-shadow: 5px 5px 10px 0px rgba(0, 0, 0, 0.5);">
            <div class="">
                <div class="heading_s1">
                    <h3 class="mb-30">Create an Account</h3>
                </div>
                <p class="mb-50 font-sm">
                    Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy
                </p>
                <form method="post" action="/user/signup">
                    <div class="form-group">
                     
                        <input style="border-radius: 20px; background-color: rgba(245, 245, 245, 0.534); box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.5);" type="text" placeholder="Enter First Name" class="form-control" name="firstname">
                      
                      
                    </div>
                    <div class="form-group">
                        <input style="border-radius: 20px; background-color: rgba(245, 245, 245, 0.534); box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.5);" type="text" placeholder="Enter Last Name" class="form-control" name="lastname">
                    </div>
                    <div class="form-group">
                       
                        <input style="border-radius: 20px; background-color: rgba(245, 245, 245, 0.534); box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.5);" type="text" placeholder="Enter Email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                     
                        <input style="border-radius: 20px; background-color: rgba(245, 245, 245, 0.534); box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.5);" type="text" placeholder="Enter Phone Number" class="form-control" name="phonenumber">
                    </div>
                    <div class="form-group">
                   
                        <input style="border-radius: 20px; background-color: rgba(245, 245, 245, 0.534);   box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.5);" type="password" placeholder="Enter Password" class="form-control" name="password">
                    </div>
                    <div class="form-group">
                      
                        <input style="border-radius: 20px; background-color: rgba(245, 245, 245, 0.534);  box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.5);" type="password" placeholder="Confirm Password" class="form-control" name="chkpassword">
                    </div>
                    <div class="form-group">
                      
                        <input style="border-radius: 20px; background-color: rgba(245, 245, 245, 0.534);  box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.5);" type="text" placeholder="Have any refferal code?" class="form-control" name="refferal">
                    </div>
                       
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        <button style="background-color: black;  color: whitesmoke;" type="submit" class="btn btn-fill-out btn-block hover-up" name="login">Submit &amp; Register</button>
                    </div>
                </form>
                
                <div class="text-dark text-center">Already have an account? <a href="/user/shop">Log in now</a></div>
            </div>
        </div>
    </div>
</div>

</section>
    <%- include('partials/footerlogin') %>
   
    <%- include('partials/mainScripts') %>
</body>


</html>