
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %>
    <main class="main">
       
        <section class="mt-50 mb-50">
            <div class="container">
                <h2 class="text-dark mb-10"><i class="fa-solid fa-heart"></i> Your Wishlist</h2>
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table shopping-summery text-center">
                                <thead>
                                    <tr id="tablehead" class="main-heading">
                                        <th scope="col" colspan="2">Product</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Stock Status</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(wishlist){ %>
                                    <% if(wishlist.products.length>0){ %>
                                    <% for(let i=0; i<wishlist.products.length; i++){ %>
                                    <tr>
                                        
                                      

                                        <td class="image product-thumbnail"><img src="/<%= wishlist.products[i].product_id.images[0]  %>" alt="#"></td>
                                        <td class="product-des product-name">
                                            <h5 class="product-name"><a href=""><%= wishlist.products[i].product_id.productName  %></a></h5>
                                          <span><%= wishlist.products[i].size  %></span>
                                            <p class="font-xs"> <%= wishlist.products[i].product_id.model %>
                                            </p>
                                        </td>
                                        <td class="price" data-title="Price"><span><%= wishlist.products[i].price  %></span></td>
                                        <% if(wishlist.products[i].quantity < 1) {%>
                                            <td class="price" data-title="Price"><span>1</span></td>
                                            <%} else { %>
                                        <td class="price" data-title="Price"><span><%= wishlist.products[i].quantity %></span></td>
                                        <% } %>
                                        <td class="text-center" data-title="Stock">
                                            <% if(wishlist.products[i].stock <=0){ %>
                                                <span class="text-danger">Out of stock</span>
                                                <% } else { %>
                                            <span class="color3 font-weight-bold"><%= wishlist.products[i].stock  %></span>
                                            <% } %>
                                        </td>
                                        <td class="text-right" data-title="Cart">
                                            <% if(wishlist.products[i].stock >0){ %>
                                            <a href="/user/addfromwish?id=<%= wishlist.products[i].proid  %>" class="btn btn-sm"><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</a>
                                            <% } else { %>
                                                <span>No action available </span>
                                                <% } %>
                                        </td>
                                        <td><a onclick="deleteWish('<%= wishlist.products[i].proid  %>')"><i class="fi-rs-trash"></i></a></td>
                                    </tr>
                                    <% } %>
                                    <% }else{ %>
                                        <p>  <tr>
                                            <h1>You have no items in cart, Add new items and get the best deals fast </h1> 
                                            <script>
                                                document.getElementById('tablehead').style.display = 'none'
    
                                            </script>
                                            </tr></p>
                                            <% } %>
                                            <% } else { %>
                                                <p>  <tr>
                                                    <h1>You have no items in cart, Add new items and get the best deals fast </h1> 
                                                    <script>
                                                        document.getElementById('tablehead').style.display = 'none'
            
                                                    </script>
                                                    </tr></p>
                                                    <% } %>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <script src="/user/helpers/shopwishlist.js">

            </script>
        </section>
    </main>
    <%- include('partials/footerlogin') %>
    <!-- Vendor JS-->
    <%- include('partials/mainScripts') %>
   
   
    

</body>


</html>