<%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
  
 
    <% if (typeof(errors) !== 'undefined' && errors.length > 0) { %>
        <div id="error-message" class="alert alert-danger">
            <span>
                <% errors.forEach(error => { %>
                    <p><%= error %></p>
                <% }); %>
            </span>
        </div>
    <% } %>
  
    <section class="pt-150 pb-150">
        <div class="container d-flex justify-content-center mt-5 mb-5">
       
                        <div class="col-lg-5">
                            <div class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5">
                                <div class="padding_eight_all bg-white">
                                    <div class="heading_s1">
                                        <h3 class="mb-30">Enter Otp</h3>
                                        
                                    </div>
                                    <form method="post" action="/user/verifyOtp">
                                        <div class="form-group">
                                            <input type="number" name="enteredOTP" placeholder="Enter OTP" required>
                                            <input type="hidden" name="email" value="<%= email %>">
                                            <span>Otp expires in : </span>  <span id="timer">120</span>s
                                           
                                        </div>
                                        
                                    
                                            
                                           
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-fill-out btn-block hover-up" name="login" value="Verify Otp" >
                                        </div>
                                    </form>
                                    <form method="POST" action="/user/resendOtp">
                                        <input type="hidden" name="email" value="<%= email %>">
                                        <input id="resend" type="submit" value="Resend Otp" hidden>
                                      </form>
                                </div>
                            </div>
                        </div>
                        </div>
                        </section>
                       
    <%- include('partials/footerlogin') %>

    
    <%- include('partials/mainScripts') %>

  
  
 
    <script>



    let time = parseInt(document.getElementById('timer').textContent);

function updateTimer() {
    if (time > 0) {
        time--;
        document.getElementById('timer').textContent = time;
    } else {
        clearInterval(countdownInterval);
        document.getElementById('resend').removeAttribute('hidden');
    }
}

let countdownInterval = setInterval(updateTimer, 1000);
    </script>
</body>


</html>